<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.throw_fornt.feature.store.register.address.AddressViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.store.register.address.AddressActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3">
                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    setOnQueryTextListener="@{viewModel.searchAddress}"
                    android:id="@+id/sb_store_search_bar"
                    app:iconifiedByDefault="false"
                    app:queryHint="예) 숭실대, 동작구 상도동"
                    android:layout_gravity="center">

                </androidx.appcompat.widget.SearchView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ECECEC">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/address_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/addree_list_item"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"/>
                </FrameLayout>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</layout>