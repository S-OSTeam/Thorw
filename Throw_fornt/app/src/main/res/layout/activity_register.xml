<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.throw_fornt.feature.store.register.RegisterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".feature.store.register.RegisterActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사업자 정보"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="* 필수"
                                android:textColor="#08c17c"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/bno_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="12dp"
                            android:enabled="@{viewModel.bnoBtn}"
                            android:text="@{viewModel.btnText.toString()}"
                            android:onClick="@{()->viewModel.bnoInquire()}"
                            android:textSize="10dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/bno_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bno_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="사업자\n등록번호"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/bno_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="000-00-00000"
                            android:enabled="@{viewModel.bnoBtn}"
                            android:text="@={viewModel.crn}"
                            android:padding="16dp"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ceo_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ceo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="대표자명"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/ceo_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="홍길동"
                            android:text="@={viewModel.ceoEdit}"
                            android:padding="16dp"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/number_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/number_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="전화번호"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="02-1111-1111"
                            android:text="@={viewModel.storePhone}"
                            android:padding="16dp"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/address_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주소를 입력해주세요."
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="* 필수"
                                android:textColor="#08c17c"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_border"
                            android:hint="서울특별시 동작구 상도로 378"
                            android:text="@={viewModel.fullAddress}"
                            android:padding="16dp"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:onClick="@{()->viewModel.search()}"
                            android:enabled="true"
                            android:layout_marginRight="20dp"/>
                        <EditText
                            android:id="@+id/sub_address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_border"
                            android:hint="101호"
                            android:text="@={viewModel.subAddress}"
                            android:padding="16dp"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:enabled="true"
                            android:layout_marginRight="20dp"/>
                        <EditText
                            android:id="@+id/address_edit2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/edit_text_border_enabled"
                            android:enabled="false"
                            android:hint="우편 번호"
                            android:text="@={viewModel.zoneNo}"
                            android:textColor="#8B8B8B"
                            android:padding="16dp"
                            android:textColorHint="#8B8B8B"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <!--<FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/type_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="쓰레기 종류를 선택해주세요."
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="* 필수"
                                android:textColor="#08c17c"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>!-->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="가게 등록"
                android:onClick="@{()->viewModel.register()}"/>
        </FrameLayout>
    </LinearLayout>
</layout>