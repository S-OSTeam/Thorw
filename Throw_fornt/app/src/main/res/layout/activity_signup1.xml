<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<data>
<variable
    name="viewModel"
    type="com.example.throw_fornt.feature.signup.SignupViewModel" />
</data>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아래 정보들을 입력하세요."
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"/>



    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="5dp"
        android:text="@={viewModel.name}"
        android:hint="이름"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="50dp"
            android:text="@={viewModel.email}"
            android:hint="이메일"/>
        <TextView
            android:id="@+id/email_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0분:0초"/>
        <Button
            android:id="@+id/check_email"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="이메일 인증"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/user_email_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:text="@={viewModel.emailCode}"
            android:layout_marginLeft="50dp"
            android:hint="이메일 인증코드"/>

        <TextView
            android:id="@+id/oauth_email_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0분:0초"/>

        <Button
            android:id="@+id/check_email_code"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="인증하기"/>
    </LinearLayout>

    <EditText
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"
        android:text="@={viewModel.phone}"
        android:hint="전화번호 ex)01012345678"/>
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_text"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="60dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <EditText
             android:id="@+id/user_id"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginTop="5dp"
             android:text="@={viewModel.id}"
             android:layout_marginLeft="50dp"
             android:hint="아이디"/>

        <Button
            android:id="@+id/check_id"
            android:onClick="@{()->viewModel.idClick()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="10dp"
            android:text="중복확인" />
    </LinearLayout>
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_text"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@={viewModel.password}"
        android:hint="비밀번호"/>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_text"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/user_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.password2}"
        android:layout_marginHorizontal="50dp"
        android:hint="비밀번호 확인"/>



    <Button
        android:id="@+id/next_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:onClick="@{()->viewModel.nextPage()}"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>
</layout>