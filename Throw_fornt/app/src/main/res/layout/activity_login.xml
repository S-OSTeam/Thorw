<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.throw_fornt.feature.login.LoginViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0fc5c"
    tools:context=".feature.login.LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버리다"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="2"
        android:textSize="64dp"/>
    <EditText
        android:id="@+id/join_id"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:hint="  버리다 회원 아이디"
        android:text="@={viewModel.id}"
        android:textColorHint="#aaaaaa"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_form"/>
    <EditText
        android:id="@+id/join_password"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:text="@={viewModel.password}"
        android:hint="  버리다 회원 비밀번호"
        android:textColorHint="#aaaaaa"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_form"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.login()}"
        android:layout_marginHorizontal="20dp"
        android:text="로그인"
        android:layout_weight="0.5"/>

    <ImageButton
        android:id="@+id/kakao_login_btn"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="@{()->viewModel.kakaoLogin()}"
        android:src="@drawable/kakao_login"
        android:background="#80d048"
        android:contentDescription="카카오 로그인 버튼" />

    <ImageButton
        android:id="@+id/naver_login_btn"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/naver_login"
        android:background="#80d048"
        android:contentDescription="네이버 로그인 버튼" />
    <ImageButton
        android:id="@+id/google_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/google_login2"
        android:background="#80d048"
        android:contentDescription="구글 로그인 버튼" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d0fc5c"
        android:gravity="center">

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00f00000"
            android:text="@string/register"
            android:textColor="@color/base_purple" />

        <Button
            android:id="@+id/forget_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00f00000"
            android:text="@string/forget_id_pw"
            android:textColor="@color/base_purple"
            android:onClick="@{()->viewModel.forgetIdPw()}"
            android:layout_gravity="right"/>

    </LinearLayout>
    </LinearLayout>
</layout>